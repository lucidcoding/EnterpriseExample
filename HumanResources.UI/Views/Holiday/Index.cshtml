@model HumanResources.UI.ViewModels.IndexHolidaysViewModel

@{
    ViewBag.Title = "Holidays";
}
<h2>Holidays for @Html.DisplayFor(model => model.EmployeeFullName)</h2>

<p>
    @Html.ActionLink("Book Holiday", "Book", new { employeeId = Model.EmployeeId})
</p>
<table>
    <tr>
        <th>
            Start
        </th>
        <th>
            End
        </th>
        <th>
            Description
        </th>
    </tr>

@foreach (var item in Model.Records) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
    </tr>
}

</table>
