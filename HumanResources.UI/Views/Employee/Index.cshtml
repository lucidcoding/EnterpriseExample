@model IEnumerable<HumanResources.UI.ViewModels.IndexEmployeesViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Register New", "Register")
</p>
<table>
    <tr>
        <th>
            FullName
        </th>
        <th>
            Department
        </th>
        <th>
            HolidayEntitlement
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HolidayEntitlement)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Mark As Left", "MarkAsLeft", new { id=item.Id })
        </td>
    </tr>
}

</table>
