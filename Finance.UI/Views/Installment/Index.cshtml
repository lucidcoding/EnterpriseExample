@model Finance.UI.ViewModel.IndexInstallmentsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Installments</h2>
@Html.HiddenFor(model => model.AccountId)
<table>
    <tr>
        <th>
            DueDate
        </th>
        <th>
            Amount
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Records) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Send Invoice", "SendInvoice", new { installmentId = item.Id, accountId = Model.AccountId }) | 
            @Html.ActionLink("Mark As Paid", "MarkAsPaid", new { installmentId = item.Id, accountId = Model.AccountId }) 
        </td>
    </tr>
}

</table>
