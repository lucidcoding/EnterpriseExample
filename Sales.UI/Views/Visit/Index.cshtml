@model Sales.UI.ViewModels.IndexVisitsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Log New", "Log", new { leadId = Model.LeadId})
</p>
<table>
    <tr>
        <th>
            Start
        </th>
        <th>
            End
        </th>
    </tr>

@foreach (var item in Model.Records) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
    </tr>
}

</table>
