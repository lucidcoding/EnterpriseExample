@model Sales.UI.ViewModels.LogVisitViewModel

@{
    ViewBag.Title = "Log";
}

<h2>Log Visit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Log", "Visit"))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.LeadId)

    <div class="editor-label">
        @Html.LabelFor(model => model.Start)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Start)
        (dd/mm/yyyy hh:mm:ss)
        @Html.ValidationMessageFor(model => model.Start)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.End)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.End)
        (dd/mm/yyyy hh:mm:ss)
        @Html.ValidationMessageFor(model => model.End)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.ResultedInDeal)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ResultedInDeal)
    </div>
    
    <p>
        <input type="submit" value="Create" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
