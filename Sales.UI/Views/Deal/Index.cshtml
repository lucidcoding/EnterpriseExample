@model Sales.UI.ViewModels.IndexDealsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Deals for @Model.LeadName</h2>

<p>
    @Html.ActionLink("Register Deal", "Register", new { leadId = Model.LeadId})
</p>
<table>
    <tr>
        <th>
            MadeByConsultant
        </th>
        <th>
            Value
        </th>
    </tr>

@foreach (var item in Model.Records) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MadeByConsultant)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
    </tr>
}

</table>
