@model IEnumerable<Sales.UI.ViewModels.IndexLeadsRecordViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Leads</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Address1
        </th>
        <th>
            Address2
        </th>
        <th>
            Address3
        </th>
        <th>
            AssignedToConsultantName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedToConsultantName)
        </td>
        <td>
            @Html.ActionLink("Show Visits", "Index", "Visit", new { leadId=item.Id }, null) |
            @Html.ActionLink("Show Deals", "Index", "Deal", new { leadId=item.Id }, null)
        </td>
    </tr>
}

</table>
